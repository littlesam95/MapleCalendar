<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.bodan.maplecalendar.presentation.equipment.EquipmentUiState.EquipmentBadge" />

        <variable
            name="onItemEquipmentClickListener"
            type="com.bodan.maplecalendar.presentation.equipment.OnItemEquipmentClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_equipment_badge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@{(item.itemShapeIcon == null) ? null : @drawable/shape_equipment_slot2}"
        android:onClick="@{() -> onItemEquipmentClickListener.onItemEquipmentBadgeClicked(item)}">

        <TextView
            android:id="@+id/tv_title_equipment_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/pretendardregular"
            android:text="@{item.itemTitle}"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SmallSp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_equipment_badge"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:profileImage="@{item.itemShapeIcon}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>